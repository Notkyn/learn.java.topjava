<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
		 http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>Topjava</display-name>

    <servlet>
        <servlet-name>userServlet</servlet-name>
        <servlet-class>ru.javawebinar.topjava.web.UserServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>userServlet</servlet-name>
        <url-pattern>/users</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>mealsServlet</servlet-name>
        <servlet-class>ru.javawebinar.topjava.web.MealServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>mealsServlet</servlet-name>
        <url-pattern>/meals</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>mealsDelete</servlet-name>
        <servlet-class>ru.javawebinar.topjava.web.MealServletDelete</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>mealsDelete</servlet-name>
        <url-pattern>/mealDelete</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>mealsNew</servlet-name>
        <servlet-class>ru.javawebinar.topjava.web.MealServletNew</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>mealsNew</servlet-name>
        <url-pattern>/mealNew</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>mealsEditor</servlet-name>
        <servlet-class>ru.javawebinar.topjava.web.MealServletEditor</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>mealsEditor</servlet-name>
        <url-pattern>/mealsEditor</url-pattern>
    </servlet-mapping>

</web-app>
